#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander');

program
  .version('0.0.1')
  .option('-f, --file [file]', 'File to watch')
  .option('-p, --port [port]', 'Port to listen on [port]', 9090)
  .parse(process.argv);

var app = require('../')(program, function(err) {
  if (err) throw err
  console.log("Listening on", app.address().port)
})
